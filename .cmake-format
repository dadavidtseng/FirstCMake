# .cmake-format configuration file

# Basic formatting
tab_size: 2
max_subgroups_hwrap: 2
max_pargs_hwrap: 4
max_rows_cmdline: 2
separate_ctrl_name_with_space: false
separate_fn_name_with_space: false
dangle_parens: false
dangle_align: prefix
min_prefix_chars: 4
max_prefix_chars: 10
max_lines_hwrap: 2
line_ending: unix
command_case: lower
keyword_case: unchanged
always_wrap: []
enable_sort: true
autosort: false

# Parsing
additional_commands:
  foo:
    flags:
    - BAR
    - BAZ
    kwargs:
      HEADERS: '*'
      SOURCES: '*'
      DEPENDS: '*'

# Comment formatting
comment_char: '#'
fence_pattern: '^\\s*([`~]{3}[`~]*)(.*)$'
ruler_pattern: '^\\s*[^\\w\\s]{3}.*[^\\w\\s]{3}$'
explicit_trailing_pattern: '#<--'

# Line formatting
line_width: 80
tab_size: 2
use_tabchars: false
fractional_tab_policy: use-space
max_subgroups_hwrap: 2
max_pargs_hwrap: 6
max_rows_cmdline: 2
separate_ctrl_name_with_space: false
separate_fn_name_with_space: false
dangle_parens: false
dangle_align: prefix
min_prefix_chars: 4
max_prefix_chars: 10
max_lines_hwrap: 2
line_ending: unix
command_case: lower
keyword_case: unchanged
always_wrap: []
enable_sort: true
autosort: false

# Disable cmake-lint checks that are too strict
disable_checks:
  - C0103  # Invalid name
  - C0111  # Missing docstring